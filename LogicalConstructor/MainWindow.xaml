<Window x:Class="LogicalConstructor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogicalConstructor"
        mc:Ignorable="d"
        Title="Редактор логических элементов" Height="600" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Name="EditorGrid" Grid.Column="1" Grid.Row="1" Background="#FFF7F8D3">
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="AddElementMenuItem"  Header="Добавить элемент"  Click="AddElementMenuItem_OnClick"/>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>

    </Grid>
</Window>
